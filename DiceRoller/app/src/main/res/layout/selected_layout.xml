<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spnSelectedTotal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/numDice"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/ivDie"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/custom" />

    <TextView
        android:id="@+id/txtSelected"
        android:layout_width="wrap_content"
        android:layout_weight="10"
        android:text="TextView"
        android:textSize="20sp"
        style="@style/ListTextTheme" />

    <Button
        android:id="@+id/btnSelectedRemove"
        android:text="@string/btnRemove"
        android:onClick="deleteDie"
        style="@style/ListButtons"/>
</LinearLayout>